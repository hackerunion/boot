#!/bin/bash

PID=""
DEBUG="$1"
SSH="$2"
MAX=30

shutdown_server() {
  if [ -n "$PID" ]; then
    echo "Signalling server..."
    kill -SIGTERM "$PID"

    for ((i=0; i<$MAX; i++)); do
      if ! ps "$PID"; then
        echo " Done!"
        exit 0
      fi

      echo -n "."
      sleep 1
    done
  fi

  echo "Shutdown failed!"
  exit 1
}

start_ssh() {
  echo "Launching SSH server on port $SSH..."
  mkdir /var/run/sshd > /dev/null 2>&1
  /usr/sbin/sshd -p "$SSH" -o PermitRootLogin=yes -o PasswordAuthentication=yes -D
}

trap shutdown_server SIGTERM

if [ -n "$SSH" ]; then
  start_ssh
fi

echo "Launching kernel..."
cd "$SERVER_ROOT/usr/src/kernel/"

# can't run using npm since npm dies on signal
DEBUG="$DEBUG" node ./bin/boot.js &
PID="$!"

echo "Waiting for worker..."
wait "$PID"
